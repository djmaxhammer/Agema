{% extends '@PanchAgemaAdmin/base.html.twig' %}

{% block body %}
    {% block container %}

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">{{ page_title }}</h3>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Thumbnail</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Slug</th>
                    <th>Options</th>
                </tr>
                </thead>

                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>
                            <img src="{{ product.thumbnail.path }}" {{ product.thumbnail.height > 32 ? 'height="32"':''}} />
                        </td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.shortDescription }}</td>
                        <td>{{ product.category }}</td>
                        <td>{{ product.slug }}</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-gears fa-fw"></i>
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenuOptions">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><i class="fa fa-edit fa-fw"></i> Edit</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><i class="fa fa-trash-o fa-fw"></i> Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {% endblock container %}
{% endblock body %}