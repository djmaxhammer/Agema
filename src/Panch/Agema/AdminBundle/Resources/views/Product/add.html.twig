{% extends '@PanchAgemaAdmin/base.html.twig' %}

{% block body %}
    {% block container %}

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">{{ page_title }}</h3>
        </div>
        <!-- /.col-lg-12 -->
        <form class="form-horizontal" enctype="multipart/form-data" role="form" method="post">
            <div class="form-group">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.shortDescription, 'Description', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.shortDescription, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.colorCorrection, 'Color corection', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.colorCorrection, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.clearAperture, 'Clear aperture', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.clearAperture, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.focalLength, 'Focal length', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.focalLength, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.resolution, 'Resolution', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.resolution, { 'attr': {'type': 'number', 'class': 'form-control', 'placeholder': '0.00'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.magnificationRange, 'Magnification range', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.magnificationRange, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.limitVisualMagnitude, 'Limit visual magnitude', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.limitVisualMagnitude, { 'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.tube, 'Tube', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.tube, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.focuser, 'Focuser', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.focuser, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.fieldCorrector, 'Field corrector', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.fieldCorrector, { 'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.thumbnail, 'Preview image', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.thumbnail, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.category, 'Category', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.category, { 'attr':   {'class': 'form-control'}}) }} <br>

                    <button type="submit" class="col-sm-12 btn btn-success btn-lg">Add Product</button>
                    {{ form_rest(form) }}
                </div>
            </div>
        </form>
    </div>
    <!-- /.row -->

    {% endblock container %}
{% endblock body %}